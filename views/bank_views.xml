<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bank Account Views -->
    <record id="view_qb_bank_account_tree" model="ir.ui.view">
        <field name="name">qb.bank.account.tree</field>
        <field name="model">qb.bank.account</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="number"/>
                <field name="currency_id"/>
                <field name="balance"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_qb_bank_account_form" model="ir.ui.view">
        <field name="name">qb.bank.account.form</field>
        <field name="model">qb.bank.account</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="number"/>
                        </group>
                        <group>
                            <field name="currency_id"/>
                            <field name="balance"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Bank Statement Views -->
    <record id="view_qb_bank_statement_tree" model="ir.ui.view">
        <field name="name">qb.bank.statement.tree</field>
        <field name="model">qb.bank.statement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="bank_account_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_qb_bank_statement_form" model="ir.ui.view">
        <field name="name">qb.bank.statement.form</field>
        <field name="model">qb.bank.statement</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="bank_account_id"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Journal Entry Views -->
    <record id="view_qb_journal_entry_tree" model="ir.ui.view">
        <field name="name">qb.journal.entry.tree</field>
        <field name="model">qb.journal.entry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="amount"/>
                <field name="bank_account_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_qb_journal_entry_form" model="ir.ui.view">
        <field name="name">qb.journal.entry.form</field>
        <field name="model">qb.journal.entry</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="bank_account_id"/>
                            <field name="debit"/>
                            <field name="credit"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_qb_bank_account" model="ir.actions.act_window">
        <field name="name">Bank Accounts</field>
        <field name="res_model">qb.bank.account</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_qb_bank_statement" model="ir.actions.act_window">
        <field name="name">Bank Statements</field>
        <field name="res_model">qb.bank.statement</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_qb_journal_entry" model="ir.actions.act_window">
        <field name="name">Journal Entries</field>
        <field name="res_model">qb.journal.entry</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_qb_bank_account"
        name="Bank Accounts"
        parent="menu_qb_reconcile_root"
        action="action_qb_bank_account"
        sequence="10"/>

    <menuitem id="menu_qb_bank_statement"
        name="Bank Statements"
        parent="menu_qb_reconcile_root"
        action="action_qb_bank_statement"
        sequence="20"/>

    <menuitem id="menu_qb_journal_entry"
        name="Journal Entries"
        parent="menu_qb_reconcile_root"
        action="action_qb_journal_entry"
        sequence="30"/>
</odoo>
