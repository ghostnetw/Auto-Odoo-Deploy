<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_qb_reconcile_wizard" model="ir.actions.act_window">
        <field name="name">Bank Reconciliation</field>
        <field name="res_model">qb.reconcile.wizard</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Start a new bank reconciliation
            </p>
        </field>
    </record>

    <record id="action_qb_reconcile_session" model="ir.actions.act_window">
        <field name="name">Saved Reconciliations</field>
        <field name="res_model">qb.reconcile.session</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No saved reconciliation sessions
            </p>
        </field>
    </record>

    <menuitem id="menu_qb_reconcile_root"
        name="QB Reconciliation"
        parent="account.menu_finance"
        sequence="5"/>

    <menuitem id="menu_qb_reconcile_wizard"
        name="New Reconciliation"
        parent="menu_qb_reconcile_root"
        action="action_qb_reconcile_wizard"
        sequence="1"/>

    <menuitem id="menu_qb_reconcile_session"
        name="Saved Sessions"
        parent="menu_qb_reconcile_root"
        action="action_qb_reconcile_session"
        sequence="2"/>
</odoo>
