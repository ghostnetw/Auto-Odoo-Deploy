<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_qb_reconcile_wizard_form" model="ir.ui.view">
        <field name="name">qb.reconcile.wizard.form</field>
        <field name="model">qb.reconcile.wizard</field>
        <field name="arch" type="xml">
            <form string="Bank Reconciliation">
                <header>
                    <button name="action_start_reconciliation" string="Start Reconciliation" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_save_session" string="Save for Later" type="object" attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                    <button name="action_validate_reconciliation" string="Validate" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="journal_id" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="date_from" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="date_to" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="opening_balance" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="closing_balance" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="difference" widget="monetary"/>
                            <field name="session_id" invisible="1"/>
                        </group>
                    </group>
                    <div class="o_qb_search_box" attrs="{'invisible': [('state', '=', 'draft')]}">
                        <input type="text" class="o_qb_search_input" placeholder="Search..."/>
                        <button class="o_qb_search_button btn btn-primary">Search</button>
                    </div>
                    <notebook attrs="{'invisible': [('state', '=', 'draft')]}">
                        <page string="Bank Transactions" name="bank_transactions">
                            <field name="statement_line_ids" widget="many2many" domain="[('journal_id', '=', journal_id)]">
                                <tree editable="bottom" create="false">
                                    <field name="date" class="o_qb_sort_column" data-field="date"/>
                                    <field name="ref" class="o_qb_sort_column" data-field="ref"/>
                                    <field name="partner_id" class="o_qb_sort_column" data-field="partner"/>
                                    <field name="amount" class="o_qb_sort_column" data-field="amount"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Journal Items" name="journal_items">
                            <field name="journal_item_ids" widget="many2many">
                                <tree create="false">
                                    <field name="date" class="o_qb_sort_column" data-field="date"/>
                                    <field name="move_id" class="o_qb_sort_column" data-field="move"/>
                                    <field name="ref" class="o_qb_sort_column" data-field="ref"/>
                                    <field name="partner_id" class="o_qb_sort_column" data-field="partner"/>
                                    <field name="debit" class="o_qb_sort_column" data-field="debit" sum="Total Debit"/>
                                    <field name="credit" class="o_qb_sort_column" data-field="credit" sum="Total Credit"/>
                                    <field name="reconciled" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Reconciled Items" name="reconciled_items">
                            <field name="reconciled_line_ids" widget="many2many">
                                <tree create="false">
                                    <field name="date"/>
                                    <field name="move_id"/>
                                    <field name="ref"/>
                                    <field name="partner_id"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_qb_reconcile_wizard_tree" model="ir.ui.view">
        <field name="name">qb.reconcile.wizard.tree</field>
        <field name="model">qb.reconcile.wizard</field>
        <field name="arch" type="xml">
            <tree string="Bank Reconciliations">
                <field name="name"/>
                <field name="company_id"/>
                <field name="journal_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="difference"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_qb_reconcile_session_tree" model="ir.ui.view">
        <field name="name">qb.reconcile.session.tree</field>
        <field name="model">qb.reconcile.session</field>
        <field name="arch" type="xml">
            <tree string="Saved Sessions">
                <field name="name"/>
                <field name="company_id"/>
                <field name="journal_id"/>
                <field name="date_saved"/>
                <field name="state"/>
                <button name="action_continue_reconciliation" string="Continue" type="object" class="oe_highlight" attrs="{'invisible': [('state', '=', 'done')]}"/>
            </tree>
        </field>
    </record>
</odoo>
